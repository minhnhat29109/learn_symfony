{% extends 'base.html.twig' %}

{% block title %}Hello ArticleAdminController!{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>author</th>
            <th>Action</th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.author.firstName }}</td>

                <td>
                    <a href="{{ path('edit-task', {id:article.id})}}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('delete-task', {id:article.id})}}" onclick="return (confirm('Delete?'))" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
        
{% endblock %}

