{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
    {{ form_start(form, {'method': 'POST'}) }}
        <tr>
            <td>Task name: </td>
            <td>{{ form_widget(form.name) }}</td>
            <td>{{ form_errors(form.name) }}</td>
        <tr>
            <td>Task content: </td>
            <td>{{ form_widget(form.content) }}</td>
            <td>{{ form_errors(form.content) }}</td>
        </tr>
        <tr>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="{{ path('list-task') }}" class="btn btn-secondary">Close</a>
        </tr>
        
    {{ form_end(form) }}
{% endblock %}
